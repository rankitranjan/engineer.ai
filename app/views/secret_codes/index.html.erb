<%- model_class = SecretCode -%>
<div class="page-header">
  <h3><%=t '.title', :default => 'List of Secret Codes and there associated user' %>
    <button class='btn btn-primary' style='float: right' data-toggle="modal" data-target="#secret-codes-modal">Generate more secret codes</button>
  </h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:user) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @secret_codes.each do |secret_code| %>
      <tr>
        <td><%= secret_code.id %></td>
        <td><%= secret_code.code %></td>
        <td><%= secret_code.user.email rescue '-' %></td>
        <td><%=l secret_code.created_at %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render :partial => 'generate' %>